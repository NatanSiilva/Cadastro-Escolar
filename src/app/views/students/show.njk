{% extends "layout.njk" %}

{% block content %}

<div class="card">

        <section class="avatar" style="background: url( {{student.avatar_url}}) no-repeat center center/ cover">
        </section>

        <section class="content-teachers">
            <h3>Student</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Formação</div>
                <div>{{ student.graduation }}</div>
            </div>

            

            <div class="item">
                <div>Email</div>
                <div>{{ student.email}}</div>
            </div>


            <div class="item">
                <div>Estudante de: </div>
                <div>
                    {% for service in student.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Etudante desde</div>
                <div> {{ student.created_at }}</div>
            </div>

            <div class="item">
                <div>Aluno de:</div>
                <div> {{ student.teacher_name }}</div>
            </div>

            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
        </section>

    </div>



{% endblock content %}

    

